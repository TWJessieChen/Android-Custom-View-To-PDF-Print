<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:id="@+id/screen">

    <TextView
        android:id="@+id/tv_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="JC"/>

    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tv_first_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="666"/>

    <TextView
        android:id="@+id/tv_patient_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="病例號碼"/>

    <ImageView
        android:id="@+id/iv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="5dp"
        android:src="@mipmap/female"
        app:layout_constraintTop_toBottomOf="@+id/tv_patient_number"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_patient_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/iv_gender"
        app:layout_constraintTop_toBottomOf="@+id/tv_patient_number"
        tools:text="年齡: 17"/>

    <TextView
        android:id="@+id/tv_patient_brithday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="15dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tv_patient_age"
        app:layout_constraintTop_toBottomOf="@+id/tv_patient_number"
        tools:text="生日 2004.03.11"/>

    <ImageView
        android:id="@+id/iv_ecg_background"
        android:layout_width="667px"
        android:layout_height="311px"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ecg_background"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_gender" />

    <TextView
        android:id="@+id/tv_print_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="2021.12.03"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2021.12.03"/>

</androidx.constraintlayout.widget.ConstraintLayout>